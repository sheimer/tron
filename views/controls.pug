include mixins/buttonGradient.pug
include mixins/checkbox.pug

div(class='flex-row')
  div(class='dropdown')
    button#btn-settings
      i(class='ri-equalizer-fill')
    div(class='dropdown-content bottom-end')
      h2 Theme
      div(class="flex-column medium-gap")
        div(class="flex-row")
          button#scheme-light
            div(class="flex-row")
              i(class="ri-sun-fill")
              | Light
          button#scheme-dark(class="button-inverted")
            div(class="flex-row")
              i(class="ri-moon-clear-fill")
              | Dark
          +buttonGradient({"id":"scheme-auto"})
            div(class="flex-row")
              i(class='ri-palette-fill')
              | Auto
        +checkbox({"id":"show-palette", "label": "Show Color Palette"})
      h2 Settings
      div(class="flex-column small-gap")
        +checkbox({"id":"colored-players", "label": "Colored Players"})
        +checkbox({"id":"show-gamestats", "label": "Show Ping"})
