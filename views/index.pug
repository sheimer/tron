extends layout

block content
  h1= title
  div#screen
    canvas#arena
    #lobby
      p Welcome to #{title}
      p Select or create a new game, please...
      table#gamelisttable
        thead
          tr
            th(style="width: 10%") Id
            th(style="width: 50%") Name
            th(style="width: 15%") # Players
            th(style="width: 15%") Status
            th(style="width: 10%")
        tbody#body-gamelisttable
    #playersconfig
      p Game "#[span#gameName gameName]" (#[span#gameId gameId]) ready, create players!
      table#playerstable
        thead
          tr
            th(style="width: 50%") Name
            th(style="width: 40%") Keys
            th(style="width: 10%")
        tbody#body-playerstable
    #playernames
      #playerpos0
      #playerpos1
      #playerpos2
      #playerpos3
      #playerpos4
      #playerpos5
    #scores
      p #[span#gamecount] game's results...
      p#messages
      table#scoretable(style="width: 100%;")
        thead
          tr
            th(style="width: 25%") Name
            th(style="width: 15%; text-align: right;") Round
            th(style="width: 15%; text-align: right;") Kills
            th(style="width: 15%; text-align: right;") Killed
            th(style="width: 15%; text-align: right;") Escaped
            th(style="width: 15%; text-align: right;") Total
        tbody#body-scoretable
  #footer-game(class='flex-row')
    input(type='button' value=' start ' id='btn-start-game' disabled=true)
  #footer-lobby(class='flex-row')
    input(type='text' value='' placeholder='gamename' id='input-create-game')
    input(type='button' value=' create game ' id='btn-create-game' disabled=true)
  #footer-playersconfig(class='flex-row')
    input(type='text' value='' placeholder='playername' id='input-add-player')
    select(id='select-keycodes' required=true)
      option(value='' disabled=true selected=true hidden=true) select left/right turn
      option(value='66_78') b/n
      option(value='89_88') y/x
      option(value='75_76') k/l
      option(value='81_87') q/w
      option(value='40_39') &lt;down>/&lt;right>
      option(value='98_99') &lt;kpad 2>/&lt;kpad 3>
    input(type='button' value=' add player ' id='btn-add-player' disabled=true)
    input(type='button' value=' start ' id='btn-init-game' disabled=true)
  #gamestats
    h1#ping
  #log
